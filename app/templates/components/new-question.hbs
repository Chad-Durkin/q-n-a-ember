{{#if newQuestionForm}}
<h1>Fill out the question form to post your new question!</h1>
<div class="new-question">
  <form class="question-form">
    <div class="form-group">
      <label for="author">Authors Name/Tag:</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="note">Side Note:</label>
      {{input value=note id="note"}}
    </div>
    <div class="form-group">
      <label for="content">What is your question?</label>
      {{input value=content id="question"}}
    </div>

    <button {{action 'saveQuestion'}}>Submit Question</button>
  </form>
</div>
{{else}}
<div class="new-question-btn">
  <button {{action 'questionFormShow'}}> New Question!</button>
</div>
{{/if}}
