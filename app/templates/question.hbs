<div class="question-content">
    <div class="row">
        <div class="col-md-9">
            <h2>{{model.author}}</h2>
            <p>{{model.content}}</p>
        </div>
        <div class="col-md-3">
            <p>Notes: {{model.note}}</p>
        </div>
    </div>
    <hr>
    <div class="row">
        {{#each model.questions as |question|}}
            <p><strong>{{question.author}}</strong> - {{question.content}}</p>
            <hr>
        {{/each}}
    </div>
</div>
