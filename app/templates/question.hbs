<div class="question-content">
  <div class="row">
    <div class="col-md-9">
      <h2>Author - {{model.author}}</h2>
      <p>Question - {{model.content}}</p>
    </div>
    <div class="col-md-3">
      <p>Notes: {{model.note}}</p>
    </div>
  </div>
  <hr>
  <div class="row">
    <h2>Answers</h2>
    <hr>
    {{#each model.answers as |answer|}}
      <p><strong>{{answer.author}}</strong> - {{answer.response}}</p>
      <hr>
    {{/each}}
    {{new-answer question=model saveAnswer='saveAnswer'}}
  </div>
</div>
